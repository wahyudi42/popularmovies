<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.NoActionBar"></style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MovieCategoryTitle">
        <item name="android:textSize">@dimen/category_title</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="AppTheme.MovieTitle">
        <item name="android:textSize">@dimen/movie_title</item>
    </style>

    <style name="AppTheme.TextSecondary">
        <item name="android:alpha">0.54</item>
    </style>

    <style name="AppTheme.MovieDetailSecondary" parent="AppTheme.TextSecondary">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.Ripple" parent="AppTheme">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@android:color/black</item>
        <item name="mrl_rippleAlpha">0.25</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleDuration">250</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
